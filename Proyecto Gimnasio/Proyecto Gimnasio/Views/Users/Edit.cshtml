@model Proyecto_Gimnasio.Models.User

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit User</h1>
<h4>User Information</h4>
<hr />
<link rel="stylesheet" href="~/css/Users.css" />
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="UserId" value="@Model.Id" />
            
            <h4>User Account</h4>
            <hr />

            <div class="form-row">
                <div class="form-group">
                    <label for="Email" class="control-label">Email Address</label>
                    <input name="Email" id="Email" class="form-control" value="@Model.Email" required />
                </div>
                <div class="form-group">
                    <label for="Password" class="control-label">Password (leave blank to keep current)</label>
                    <input name="Password" id="Password" class="form-control" type="password" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" name="primarySession" type="checkbox" @(Model.primarySession ? "checked" : "") /> Primary Session
                    </label>
                </div>
                <div class="form-group">
                    <label class="control-label">Role (cannot be changed)</label>
                    <input type="text" class="form-control" value="@Model.Rol" readonly />
                </div>
            </div>
            
            <h4>Person Information</h4>
            <hr />
            
            <input type="hidden" name="IdPerson" value="@Model.Person?.IdPerson" />
            
            <div class="form-row">
                <div class="form-group">
                    <label for="Name" class="control-label">NAME</label>
                    <input name="Name" id="Name" class="form-control" value="@Model.Person?.Name" required />
                </div>
                <div class="form-group">
                    <label for="LasName" class="control-label">LAST NAME</label>
                    <input name="LasName" id="LasName" class="form-control" value="@Model.Person?.LasName" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="SecondLastName" class="control-label">SECOND LAST NAME</label>
                    <input name="SecondLastName" id="SecondLastName" class="form-control" value="@Model.Person?.SecondLastName" />
                </div>
                <div class="form-group">
                    <label for="Cnit" class="control-label">CNIT</label>
                    <input name="Cnit" id="Cnit" type="number" class="form-control" value="@Model.Person?.Cnit" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="DateBirthay" class="control-label">Date of Birth</label>
                    <input name="DateBirthay" id="DateBirthay" type="date" class="form-control" value="@Model.Person?.DateBirthay.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="form-group">
                    <label for="Gender" class="control-label">Gender</label>
                    <select name="Gender" id="Gender" class="form-control" required>
                        <option value="M">Male</option>
                        <option value="F">Famele</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
