@model IEnumerable<Proyecto_Gimnasio.Models.Product>

<h2>Productos disponibles</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="~/@p.Image" class="card-img-top" style="height:200px; object-fit:cover;" />

                <div class="card-body">
                    <h5>@p.NameProduct</h5>
                    <p>Precio: @p.Price.ToString("C")</p>

                    <form asp-action="Add" method="post">
                        <input type="hidden" name="id" value="@p.IdProduct" />
                        <button class="btn btn-primary">Agregar al carrito</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Cart" class="btn btn-dark">Ver carrito</a>
