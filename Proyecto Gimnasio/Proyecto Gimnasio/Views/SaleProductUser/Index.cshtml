@model IEnumerable<Proyecto_Gimnasio.Models.Product>
@{
    ViewData["Title"] = "Tienda de Productos";
}

<h2>Tienda de Productos</h2>

<!-- Mensajes -->
@if (TempData["ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">¡Compra realizada!</h4>
        <p>@TempData["ok"]</p>
        <hr />
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<!-- Botón para ver historial -->
<div class="mb-3">
    <a asp-action="MyPurchases" class="btn btn-info">
        Ver mis compras anteriores
    </a>
</div>

<hr />

<h3>Productos disponibles</h3>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.Image))
                {
                    <img src="~/@product.Image" class="card-img-top" style="height:200px; object-fit:cover;" alt="@product.NameProduct" />
                }
                else
                {
                    <div class="d-flex align-items-center justify-content-center bg-light" style="height:200px;">
                        <span class="text-muted">Sin Imagen</span>
                    </div>
                }

                <div class="card-body">
                    <h5 class="card-title">@product.NameProduct</h5>
                    <p class="card-text mb-1">
                        Categoría: <span class="badge bg-secondary">@product.Category?.NameCategory</span>
                    </p>
                    <p class="card-text mb-1">
                        Stock:
                        @if (product.Stock > 0)
                        {
                            <span class="fw-bold text-success">@product.Stock unidades</span>
                        }
                        else
                        {
                            <span class="fw-bold text-danger">Agotado</span>
                        }
                    </p>
                    <h4 class="text-primary mt-2">@product.Price.ToString("C")</h4>

                    <form asp-action="Add" method="post" class="mt-3">
                        <input type="hidden" name="id" value="@product.IdProduct" />
                        <div class="input-group mb-2">
                            <span class="input-group-text">Cant.</span>
                            <input type="number"
                                   name="quantity"
                                   value="1"
                                   min="1"
                                   max="@product.Stock"
                                   class="form-control"
                                   @(product.Stock <= 0 ? "disabled" : "") />
                        </div>
                        <button type="submit"
                                class="btn btn-primary w-100"
                                @(product.Stock < 1 ? "disabled" : "")>
                            @if (product.Stock < 1)
                            {
                                <span>Sin Stock</span>
                            }
                            else
                            {
                                <span>Agregar al carrito</span>
                            }
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Botón grande del carrito (igual que el admin) -->
<div class="d-grid gap-2 mt-4 mb-5">
    <a asp-action="Cart" class="btn btn-dark btn-lg">
        Ver Carrito y Confirmar Compra
        @if (ViewBag.CartCount > 0)
        {
            <span class="badge bg-light text-dark ms-2">@ViewBag.CartCount</span>
        }
    </a>
</div>