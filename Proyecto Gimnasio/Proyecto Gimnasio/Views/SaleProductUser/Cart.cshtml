@using Proyecto_Gimnasio.Controllers
@model IEnumerable<Proyecto_Gimnasio.Models.Product>
@{
    var cartItems = ViewBag.CartItems as List<SaleProductUserController.CartItem>;
}

<h2 class="mb-4">Shopping Cart</h2>

@if (cartItems == null || !cartItems.Any())
{
    <div class="alert alert-warning">The cart is empty</div>
    <a asp-action="Index" class="btn btn-primary">Back to products</a>
}
else
{
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in cartItems)
            {
                var p = Model.FirstOrDefault(x => x.IdProduct == item.ProductId);
                if (p != null)
                {
                    <tr>
                        <td><strong>@p.NameProduct</strong></td>
                        <td>Bs @p.Price:N2</td>
                        <td class="text-center fw-bold fs-5">@item.Quantity</td>
                        <td class="text-end fw-bold">Bs @(p.Price* item.Quantity)</td>
                        <td>
                            <form asp-action="Remove" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@p.IdProduct" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr class="table-success">
                <td colspan="3" class="text-end fw-bold fs-3">TOTAL TO PAY:</td>
                <td class="text-end fw-bold fs-3">
                    Bs @cartItems.Sum(i => Model.First(p => p.IdProduct == i.ProductId).Price * i.Quantity)
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Continue Shopping</a>
        <a asp-action="Checkout" class="btn btn-success btn-lg ms-3">Checkout</a>
    </div>
}
