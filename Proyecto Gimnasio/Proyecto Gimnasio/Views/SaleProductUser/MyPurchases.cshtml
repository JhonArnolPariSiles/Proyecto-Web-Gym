@model IEnumerable<Proyecto_Gimnasio.Models.SaleProduct>

<h2>My Purchases</h2>
<a asp-action="Index" class="btn btn-primary mb-3">Continue Shopping</a>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't made any purchases yet.</div>
}
else
{
    @foreach (var venta in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-success text-white">
                <strong>Purchase #@venta.IdSaleProduct</strong> - @venta.DateSale.ToString("dd/MM/yyyy HH:mm")
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in venta.saleDetailsProducts)
                        {
                            <tr>
                                <td>@d.Product.NameProduct</td>
                                <td>@d.Quantity</td>
                                <td>@d.TotalPrice.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4 class="text-end text-success">Total: @venta.Total.ToString("C")</h4>
            </div>
        </div>
    }
}
