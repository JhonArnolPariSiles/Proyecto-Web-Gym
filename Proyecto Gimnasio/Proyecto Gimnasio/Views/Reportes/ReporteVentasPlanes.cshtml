@model IEnumerable<Proyecto_Gimnasio.Models.ViewModels.ReporteVentasViewModel>

@{
    ViewData["Title"] = "Reporte de Ventas de Planes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-clipboard-list text-success"></i> Plan Sales Report
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Return
        </a>
    </div>

    <!-- Filtro por Año -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="ReporteVentasPlanes">
                <div class="row">
                    <div class="col-md-4">
                        <label for="year" class="form-label">Filter by Year:</label>
                        <select name="year" id="year" class="form-select">
                            <option value="">All Year</option>
                            @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                            {
                                <option value="@i" selected="@(ViewBag.SelectedYear == i)">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Resumen General -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Total Ventas</h5>
                        <h3>@Model.Sum(m => m.TotalSales).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Planes Vendidos</h5>
                        <h3>@Model.Sum(m => m.TotalQuantity)</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de Resultados -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Año</th>
                                <th>Mes</th>
                                <th class="text-end">Total Ventas</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-end">Promedio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Year</td>
                                    <td>@item.MonthName</td>
                                    <td class="text-end">@item.TotalSales.ToString("C")</td>
                                    <td class="text-end">@item.TotalQuantity</td>
                                    <td class="text-end">@((item.TotalSales / item.TotalQuantity).ToString("C"))</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary fw-bold">
                                <td colspan="2">TOTALES</td>
                                <td class="text-end">@Model.Sum(m => m.TotalSales).ToString("C")</td>
                                <td class="text-end">@Model.Sum(m => m.TotalQuantity)</td>
                                <td class="text-end">@((Model.Sum(m => m.TotalSales) / Model.Sum(m => m.TotalQuantity)).ToString("C"))</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No hay datos disponibles para mostrar.
        </div>
    }
</div>