
@{
    ViewData["Title"] = "Reportes";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-chart-bar"></i> Reporting System
    </h2>

    <div class="row">

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-box text-primary"></i> Product Sales
                    </h5>
                    <p class="card-text">Monthly sales report of products with totals and quantities.</p>
                    <a asp-action="ReporteVentasProductos" class="btn btn-primary">
                        <i class="fas fa-chart-line"></i> Ver Reporte
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-clipboard-list text-success"></i> Plan Sales
                    </h5>
                    <p class="card-text">Monthly sales report for membership plans.</p>
                    <a asp-action="ReporteVentasPlanes" class="btn btn-success">
                        <i class="fas fa-chart-line"></i> Ver Reporte
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>