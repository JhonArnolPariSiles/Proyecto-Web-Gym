@model IEnumerable<Proyecto_Gimnasio.Models.Sale>
<link rel="stylesheet" href="~/css/saleplansuser.css" />

<div class="saleplans-container">
    <h1 class="mb-4">My Purchased Plans</h1>

    <div class="mb-4 text-end">
        <a asp-action="Index" class="btn btn-primary btn-lg">Buy More Plans</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            You haven't purchased any plans yet.
        </div>
    }
    else
    {
        @foreach (var sale in Model.OrderByDescending(s => s.DateSale))
        {
            <div class="card mb-4 border-primary shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        Purchase from @sale.DateSale.ToString("dd/MM/yyyy")
                        <span class="float-end">Total: Bs @sale.Total</span>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var detail in sale.saleDetailsPlans)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="border-start border-warning border-4 ps-3">
                                    <h5 class="text-warning">@detail.Plans.NamePlan</h5>
                                    <p class="mb-1">@detail.Plans.Description</p>
                                    <small class="text-muted">
                                        Valid: <strong>@detail.Plans.StartDate.ToString("dd/MM/yyyy")</strong> -
                                        <strong>@detail.Plans.EndDate.ToString("dd/MM/yyyy")</strong>
                                    </small>
                                    <h6 class="text-success mt-2">Bs @detail.TotalPrice</h6>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
