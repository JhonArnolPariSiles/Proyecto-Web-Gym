@model IEnumerable<Proyecto_Gimnasio.Models.Plans>
<link rel="stylesheet" href="~/css/saleplansuser.css" />

<div class="saleplans-container">
    <h1 class="mb-4">Plan Cart</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center p-4">
            Your cart is empty
        </div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary btn-lg">Back to Plans</a>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Plan</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plan in Model)
                {
                    <tr>
                        <td>
                            <strong class="text-warning">@plan.NamePlan</strong><br />
                            <small class="text-muted">@plan.Description</small>
                        </td>
                        <td class="text-end align-middle">
                            <h4 class="text-success">Bs @plan.Price</h4>
                        </td>
                        <td class="text-center align-middle">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="id" value="@plan.IdPlan" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-success">
                    <td class="text-end fw-bold fs-3">TOTAL:</td>
                    <td class="text-end fw-bold fs-3">Bs @Model.Sum(p => p.Price)</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-end mt-5">
            <a asp-action="Index" class="btn btn-secondary btn-lg">Continue Shopping</a>
            <a asp-action="Checkout" class="btn btn-success btn-lg ms-3">Confirm Purchase</a>
        </div>
    }
</div>