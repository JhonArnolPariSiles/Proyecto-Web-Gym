@model IEnumerable<Proyecto_Gimnasio.Models.Plans>
@{
    var person = ViewBag.Person as Proyecto_Gimnasio.Models.Person;
}
<link rel="stylesheet" href="~/css/saleplansuser.css" />

<div class="saleplans-container">
    <h1 class="mb-4">Confirm Plan Purchase</h1>

    <div class="alert alert-info p-4 mb-5 text-center">
        <h4>Customer: <strong class="text-warning">@person.Name @person.LasName</strong></h4>
        <p>DNI: @person.Cnit</p>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Plan</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>
                        <strong>@plan.NamePlan</strong><br />
                        <small class="text-muted">@plan.Description</small>
                    </td>
                    <td class="text-end align-middle">
                        <h4 class="text-success">Bs @plan.Price</h4>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="table-success fw-bold fs-3">
                <td class="text-end">TOTAL AMOUNT:</td>
                <td class="text-end">Bs @Model.Sum(p => p.Price)</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center mt-5">
        <form asp-action="CheckoutConfirm" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success btn-lg px-5">
                Confirm & Complete Purchase
            </button>
        </form>
        <a asp-action="Cart" class="btn btn-secondary btn-lg d-block mt-3">
            Back to Cart
        </a>
    </div>
</div>