@model IEnumerable<Proyecto_Gimnasio.Models.Plans>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/plans.css" />
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamePlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePlan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                        <a asp-action="Edit" asp-route-id="@item.IdPlan" class="btn btn-warning btn-sm">Edit</a>
                }
                @if (User.IsInRole("Admin"))
                {
                        <a asp-action="Details" asp-route-id="@item.IdPlan" class="btn btn-info btn-sm ms-1">Details</a>
                }
                @if (User.IsInRole("Admin"))
                {
                        <a asp-action="Delete" asp-route-id="@item.IdPlan" class="btn btn-danger btn-sm ms-1">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
