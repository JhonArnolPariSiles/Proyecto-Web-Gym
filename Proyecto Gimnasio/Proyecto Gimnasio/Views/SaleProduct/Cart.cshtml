@model IEnumerable<Proyecto_Gimnasio.Models.Product>

@{
    ViewData["Title"] = "Carrito de Productos";
    var personId = (int)ViewBag.SelectedPersonId;
}

<h2>Carrito</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">El carrito está vacío</div>
    <a asp-action="Index" class="btn btn-primary">Ver productos</a>
    return;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Imagen</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NameProduct</td>

                <td>
                    @if (!string.IsNullOrEmpty(p.Image))
                    {
                        <img src="~/@p.Image" width="80" />
                    }
                </td>

                <td>@p.Price.ToString("C")</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="id" value="@p.IdProduct" />
                        <button class="btn btn-danger btn-sm" type="submit">Quitar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3 class="text-end">Total: @Model.Sum(x => x.Price).ToString("C")</h3>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Seguir comprando</a>
    <a asp-action="Checkout" class="btn btn-success">Procesar compra</a>
</div>
