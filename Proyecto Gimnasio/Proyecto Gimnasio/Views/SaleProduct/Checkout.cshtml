@model IEnumerable<Proyecto_Gimnasio.Models.Product>
@{
    ViewData["Title"] = "Confirm Purchase";
    var person = ViewBag.Person as Proyecto_Gimnasio.Models.Person;
}
<link rel="stylesheet" href="~/css/SaleProduct.css" />
<h2>Confirm Purchase</h2>
<p>Purchase for: <strong>@person?.Name @person?.LasName</strong></p>
@if (!Model.Any())
{
    <div class="alert alert-danger">There are no products in the cart.</div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
    return;
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NameProduct</td>
                <td>
                    <img src="~/@p.Image" width="100" />
                </td>
                <td>@p.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
<h3 class="text-end">Total: @Model.Sum(x => x.Price).ToString("C")</h3>
<form asp-action="CheckoutConfirm" method="post" class="mt-3">
    <button type="submit" class="btn btn-success">Confirm Purchase</button>
    <a asp-action="Cart" class="btn btn-secondary">Back to Cart</a>
</form>