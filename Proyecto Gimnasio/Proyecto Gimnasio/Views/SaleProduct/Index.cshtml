@model IEnumerable<Proyecto_Gimnasio.Models.Product>

@{
    ViewData["Title"] = "Productos y Personas";
    var persons = ViewBag.Persons as List<Proyecto_Gimnasio.Models.Person>;
    var selectedPersonId = (int)ViewBag.SelectedPersonId;
    var searchName = ViewBag.SearchName as string ?? "";
}

<h2>Productos y Personas</h2>

<!-- 🔹 CUADRO DE COMPRA REALIZADA -->
@if (TempData["ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">¡Compra realizada!</h4>
        <p>@TempData["ok"]</p>
        <hr />
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- 🔹 OTROS MENSAJES -->
@if (TempData["msg"] != null)
{
    <div class="alert alert-info">@TempData["msg"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<div class="mb-3">
    <a asp-action="PersonsIndex" class="btn btn-info">Ver todas las personas y sus compras</a>
</div>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchName" class="form-control" placeholder="Buscar persona..." value="@searchName" />
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

@if (persons != null && persons.Any())
{
    <table class="table table-bordered mb-4">
        <thead>
            <tr>
                <th>Persona</th>
                <th>Productos Comprados</th>
                <th>Seleccionar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in persons)
            {
                <tr class="@(person.IdPerson == selectedPersonId ? "table-success" : "")">
                    <td>@person.Name @person.LasName</td>
                    <td>
                        @if (person.Sales != null && person.Sales.Any())
                        {
                            <ul>
                                @foreach (var sale in person.Sales)
                                {
                                    @foreach (var sd in sale.SaleDetailsProducts)
                                    {
                                        <li>@sd.Product.NameProduct (@sd.TotalPrice.ToString("C"))</li>
                                    }
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No tiene compras</span>
                        }
                    </td>
                    <td>
                        <form asp-action="SelectPerson" method="post">
                            <input type="hidden" name="personId" value="@person.IdPerson" />
                            <button type="submit" class="btn btn-success btn-sm">Seleccionar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No se encontraron personas.</div>
}

<hr />

<h3>Productos disponibles</h3>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">

                @if (!string.IsNullOrEmpty(product.Image))
                {
                    <img src="~/@product.Image" class="card-img-top" style="height:200px;object-fit:cover;" />
                }

                <div class="card-body">
                    <h4>@product.NameProduct</h4>
                    <p>Categoría: @product.Category?.NameCategory</p>
                    <p>Stock: @product.Stock</p>
                    <h5>Precio: @product.Price.ToString("C")</h5>

                    <form asp-action="Add" method="post">
                        <input type="hidden" name="id" value="@product.IdProduct" />
                        <button type="submit" class="btn btn-primary" @(selectedPersonId == 0 ? "disabled" : "")>
                            Agregar al carrito
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Cart" class="btn btn-dark mt-3">Ir al carrito</a>
