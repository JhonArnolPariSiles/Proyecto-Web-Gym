@model IEnumerable<Proyecto_Gimnasio.Models.Plans>
@{
    ViewData["Title"] = "Plans & Customers";
    var persons = ViewBag.Persons as List<Proyecto_Gimnasio.Models.Person>;
    var selectedPersonId = (int)ViewBag.SelectedPersonId;
    var searchName = ViewBag.SearchName as string ?? "";
}
<link rel="stylesheet" href="~/css/SaleProduct.css" />

<h2>Plans & Customers</h2>

<div class="mb-3">
    <a asp-action="PersonsIndex" class="btn btn-info">View all customers and their plans</a>
</div>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-danger">@TempData["error"]</div>
}

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchName" class="form-control" placeholder="Search customer..." value="@searchName" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (persons != null && persons.Any())
{
    <table class="table table-bordered mb-4">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Purchased Plans</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in persons)
            {
                <tr class="@(person.IdPerson == selectedPersonId ? "table-success" : "")">
                    <td>@person.Name @person.LasName</td>
                    <td>
                        @if (person.Sales != null && person.Sales.Any())
                        {
                            <ul>
                                @foreach (var sale in person.Sales)
                                {
                                    @foreach (var sd in sale.saleDetailsPlans)
                                    {
                                        <li>@sd.Plans.NamePlan (Bs @sd.TotalPrice)</li>
                                    }
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No plans</span>
                        }
                    </td>
                    <td>
                        <form asp-action="SelectPerson" method="post">
                            <input type="hidden" name="personId" value="@person.IdPerson" />
                            <button type="submit" class="btn btn-success btn-sm">Select</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No customers found.</div>
}

<hr />

<h3>Available Plans</h3>

<div class="row">
    @foreach (var plan in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h4>@plan.NamePlan</h4>
                    <p>@plan.Description</p>
                    <h5>Price: Bs @plan.Price</h5>

                    <form asp-action="Add" method="post">
                        <input type="hidden" name="id" value="@plan.IdPlan" />
                        <button type="submit" class="btn btn-primary" @(selectedPersonId == 0 ? "disabled" : "")>
                            Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Cart" class="btn btn-dark mt-3">Go to Cart</a>