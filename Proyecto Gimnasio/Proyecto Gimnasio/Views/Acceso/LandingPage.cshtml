@{
    ViewData["Title"] = "Gimnasio - Landing Page";
    Layout = null; /* ESTA LÍNEA CORRIGE EL ERROR RZ1034 */
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        /* --- VARIABLES DE COLOR --- */
        :root {
            --negro-base: #121212;
            --negro-claro: #1E1E1E;
            --azul-electrico: #00509D;
            --azul-oscuro: #002952;
            --amarillo-neon: #FFD500;
            --blanco: #F5F5F5;
            --gris: #A0A0A0;
        }

        /* --- ESTILOS GENERALES --- */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            background-color: var(--negro-base);
            color: var(--blanco);
            line-height: 1.6;
        }

        h1, h2, h3 {
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        ul {
            list-style: none;
        }

        /* --- BOTONES Y TEXTO --- */
        .btn-cta {
            display: inline-block;
            background-color: var(--amarillo-neon);
            color: var(--negro-base);
            padding: 12px 30px;
            font-weight: 700;
            text-transform: uppercase;
            border: none;
            border-radius: 4px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-cta:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(255, 213, 0, 0.4);
            }

        .text-azul {
            color: var(--azul-electrico);
        }

        .text-amarillo {
            color: var(--amarillo-neon);
        }

        /* --- NAVBAR --- */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 5%;
            background-color: var(--negro-base);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 2px solid var(--azul-electrico);
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .nav-links {
            display: flex;
            gap: 20px;
        }

            .nav-links a:hover {
                color: var(--amarillo-neon);
                transition: 0.3s;
            }

        /* --- HERO SECTION --- */
        .hero {
            height: 85vh;
            /* Usamos un degradado sobre negro porque no tenemos imagen real cargada */
            background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(0,20,50,0.8) 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
            border-bottom: 1px solid var(--amarillo-neon);
        }

            .hero h1 {
                font-size: 3.5rem;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.2rem;
                margin-bottom: 30px;
                color: var(--gris);
                max-width: 600px;
            }

        /* --- SECCIONES --- */
        .section-padding {
            padding: 80px 10%;
        }

        .services {
            background-color: var(--negro-claro);
            text-align: center;
        }

        .grid-3 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .card {
            background-color: var(--negro-base);
            padding: 30px;
            border-bottom: 4px solid var(--azul-electrico);
            transition: 0.3s;
        }

            .card:hover {
                background-color: #252525;
                border-bottom-color: var(--amarillo-neon);
            }

            .card h3 {
                margin-top: 15px;
                margin-bottom: 10px;
            }

        /* --- PRECIOS --- */
        .pricing {
            background-color: var(--negro-base);
            text-align: center;
        }

        .price-card {
            border: 1px solid #333;
            padding: 40px;
            border-radius: 8px;
            position: relative;
        }

            .price-card.featured {
                border: 2px solid var(--amarillo-neon);
                background-color: rgba(255, 213, 0, 0.05);
            }

        .price {
            font-size: 2.5rem;
            color: var(--azul-electrico);
            font-weight: bold;
            margin: 20px 0;
        }

            .price span {
                font-size: 1rem;
                color: var(--gris);
            }

        .price-features li {
            margin: 15px 0;
            color: var(--gris);
        }

        /* --- FOOTER --- */
        footer {
            background-color: var(--azul-oscuro);
            padding: 40px 10%;
            text-align: center;
            border-top: 5px solid var(--amarillo-neon);
        }

        @@media(max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .navbar {
                flex-direction: column;
                gap: 15px;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <div class="logo">IRON<span class="text-amarillo">GYM</span></div>
        <div class="nav-links">
            <a href="#">Inicio</a>
            <a href="#">Clases</a>
            <a href="#">Planes</a>
        </div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Acceso" asp-action="Login">Login</a>

    </nav>

    <section class="hero">
        <h1>SUPERA TUS <span class="text-azul">LÍMITES</span></h1>
        <p>Entrenamiento de alto rendimiento, pesas libres y cardio. Abierto 24/7.</p>
        <button class="btn-cta">EMPEZAR AHORA</button>
    </section>

    <section class="services section-padding">
        <h2>Nuestras <span class="text-amarillo">Ventajas</span></h2>
        <div class="grid-3">
            <div class="card">
                <span style="font-size:2rem;">💪</span>
                <h3>Zona de Pesas</h3>
                <p>Equipamiento olímpico completo.</p>
            </div>
            <div class="card">
                <span style="font-size:2rem;">⏱️</span>
                <h3>Abierto 24/7</h3>
                <p>Entrena cuando quieras.</p>
            </div>
            <div class="card">
                <span style="font-size:2rem;">🥊</span>
                <h3>Boxeo</h3>
                <p>Ring profesional y sacos.</p>
            </div>
        </div>
    </section>

    <section class="pricing section-padding">
        <h2>Elige tu <span class="text-azul">Nivel</span></h2>
        <div class="grid-3">
            <div class="price-card">
                <h3>Básico</h3>
                <div class="price">$20<span>/mes</span></div>
                <ul class="price-features">
                    <li>Acceso Mañanas</li>
                    <li>Zona Cardio</li>
                </ul>
            </div>
            <div class="price-card featured">
                <div style="position:absolute; top:-12px; left:0; right:0;">
                    <span style="background:var(--amarillo-neon); color:black; padding:2px 10px; font-weight:bold; font-size:0.8rem;">RECOMENDADO</span>
                </div>
                <h3>PRO</h3>
                <div class="price">$35<span>/mes</span></div>
                <ul class="price-features">
                    <li>Acceso 24/7</li>
                    <li>Todas las Zonas</li>
                    <li>Clases Grupales</li>
                </ul>
                <button class="btn-cta">Inscribirse</button>
            </div>
            <div class="price-card">
                <h3>Elite</h3>
                <div class="price">$50<span>/mes</span></div>
                <ul class="price-features">
                    <li>Todo Incluido</li>
                    <li>Entrenador Personal</li>
                </ul>
            </div>
        </div>
    </section>

    <footer>
        <h2>¿Listo para el cambio?</h2>
        <p>Visítanos o contáctanos hoy mismo.</p>
        <br>
        <p style="font-size: 0.8rem; opacity: 0.7;">&copy; 2025 IronGym.</p>
    </footer>

</body>
</html>