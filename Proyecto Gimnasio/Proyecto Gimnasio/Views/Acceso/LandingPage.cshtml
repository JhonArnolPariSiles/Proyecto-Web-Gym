@{
    ViewData["Title"] = "Gimnasio - Landing Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="/css/Register.css" />
</head>
<body>

    <nav class="navbar">
        <div class="logo">IRON<span class="text-amarillo">GYM</span></div>
        <div class="nav-links">
            <a href="#">Inicio</a>
            <a href="#">Clases</a>
            <a href="#">Planes</a>
        </div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Acceso" asp-action="Login">Login</a>
    </nav>

    <section class="hero">
        <h1>SUPERA TUS <span class="text-azul">LÍMITES</span></h1>
        <p>Entrenamiento de alto rendimiento, pesas libres y cardio. Abierto 24/7.</p>
        <button class="btn-cta">EMPEZAR AHORA</button>
    </section>

    <section class="services section-padding">
        <h2>Nuestras <span class="text-amarillo">Ventajas</span></h2>
        <div class="grid-3">
            <div class="card">
                <span style="font-size:2rem;">💪</span>
                <h3>Zona de Pesas</h3>
                <p>Equipamiento olímpico completo.</p>
            </div>
            <div class="card">
                <span style="font-size:2rem;">⏱️</span>
                <h3>Abierto 24/7</h3>
                <p>Entrena cuando quieras.</p>
            </div>
            <div class="card">
                <span style="font-size:2rem;">💃</span>
                <h3>Zumba</h3>
                <p>Clases llenas de energía y ritmo.</p>
            </div>
        </div>
    </section>

    <section class="pricing section-padding">
        <h2>Elige tu <span class="text-azul">Nivel</span></h2>
        <div class="grid-3">
            <div class="price-card">
                <h3>Básico</h3>
                <div class="price">$20<span>/mes</span></div>
                <ul class="price-features">
                    <li>Acceso Mañanas</li>
                    <li>Zona Cardio</li>
                </ul>
            </div>
            <div class="price-card featured">
                <div style="position:absolute; top:-12px; left:0; right:0;">
                    <span style="background:var(--amarillo-neon); color:black; padding:2px 10px; font-weight:bold; font-size:0.8rem;">RECOMENDADO</span>
                </div>
                <h3>PRO</h3>
                <div class="price">$35<span>/mes</span></div>
                <ul class="price-features">
                    <li>Acceso 24/7</li>
                    <li>Todas las Zonas</li>
                    <li>Clases Grupales</li>
                </ul>
                <button class="btn-cta">Mira nuestros planes</button>
            </div>
            <div class="price-card">
                <h3>Elite</h3>
                <div class="price">$50<span>/mes</span></div>
                <ul class="price-features">
                    <li>Todo Incluido</li>
                    <li>Entrenador Personal</li>
                </ul>
            </div>
        </div>
    </section>

    <footer>
        <h2>¿Listo para el cambio?</h2>
        <p>Visítanos o contáctanos hoy mismo.</p>
        <br>
        <p style="font-size: 0.8rem; opacity: 0.7;">&copy; 2025 IronGym.</p>
    </footer>

</body>
</html>
